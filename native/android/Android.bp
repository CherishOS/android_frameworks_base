// The headers module is in frameworks/native/Android.bp.
ndk_library {
    name: "libandroid",
    symbol_file: "libandroid.map.txt",
    first_version: "9",
    unversioned_until: "current",
}

cc_defaults {
    name: "libandroid_defaults",
    cflags: [
        "-Wall",
        "-Werror",
        "-Wunused",
        "-Wunreachable-code",
    ],
}

cc_library_shared {
    name: "libandroid",
    defaults: ["libandroid_defaults"],

    srcs: [
        "asset_manager.cpp",
        "choreographer.cpp",
        "configuration.cpp",
        "input.cpp",
        "looper.cpp",
        "native_activity.cpp",
        "native_window.cpp",
        "net.c",
        "obb.cpp",
        "sensor.cpp",
        "storage_manager.cpp",
        "trace.cpp",
    ],

    shared_libs: [
        "liblog",
        "libcutils",
        "libandroidfw",
        "libinput",
        "libutils",
        "libbinder",
        "libui",
        "libgui",
        "libandroid_runtime",
        "libnetd_client",
    ],

    static_libs: ["libstorage"],

    include_dirs: ["bionic/libc/dns/include"],
}

// Network library.
cc_library_shared {
    name: "libandroid_net",
    defaults: ["libandroid_defaults"],
    srcs: ["net.c"],

    shared_libs: ["libnetd_client"],

    include_dirs: ["bionic/libc/dns/include"],
}
