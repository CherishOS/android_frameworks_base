#
# Mongolian keyboard layout.
# This is a typical Mongolian PC keyboard layout.
# As an added convenience, English characters are accessible using ralt (Alt Gr).
#

type OVERLAY

map key 86 BACKSLASH

### ROW 1

key GRAVE {
    label:                              '='
    base:                               '='
    shift, capslock:                    '+'
    shift+capslock:                     '+'
    ralt:                               '`'
    ralt+shift:                         '~'
}

key 1 {
    label:                              '1'
    base:                               '1'
    shift:                              '\u2116'
    ralt:                               '\u2116'
}

key 2 {
    label:                              '2'
    base:                               '2'
    shift:                              '-'
    ralt:                               '-'
}

key 3 {
    label:                              '3'
    base:                               '3'
    shift:                              '"'
    ralt:                               '"'
}

key 4 {
    label:                              '4'
    base:                               '4'
    shift:                              '\u20ae'
    ralt:                               '\u20ae'
}

key 5 {
    label:                              '5'
    base:                               '5'
    shift:                              ':'
    ralt:                               ':'
}

key 6 {
    label:                              '6'
    base:                               '6'
