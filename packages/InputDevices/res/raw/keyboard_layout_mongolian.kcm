}

key MINUS {
    label:                              '\u0435'
    base:                               '\u0435'
    shift:                              '\u0415'
    ralt:                               '\u0415'
}

key EQUALS {
    label:                              '\u0449'
    base:                               '\u0449'
    shift:                              '\u0429'
    ralt:                               '\u0429'
}

