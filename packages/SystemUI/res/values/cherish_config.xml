<resources>
    <!-- Max visible notification icons -->
    <integer name="config_maxVisibleNotificationIcons">4</integer>
    <integer name="config_maxVisibleNotificationIconsOnLock">5</integer>

    <!-- Udfps display mode provider class name -->
    <string name="config_udfpsDisplayModeProviderComponent">com.android.systemui.biometrics.DummyUdfpsDisplayModeProvider</string>

    <!-- Color of the UDFPS pressed view -->
    <color name="config_udfpsColor">#ffffffff</color>

    <!-- Udfps vendor code -->
    <integer name="config_udfpsVendorCode">0</integer>
	
	<!-- StatusBar burn-in protection -->
    <bool name="config_disableStatusBarBurnInProtection">false</bool>
    <integer name="config_shift_interval">60</integer>

    <!-- Flag to enable framework dimming for udfps -->
    <bool name="config_udfpsFrameworkDimming">false</bool>

    <!-- Array of brightness-alpha lut for framework dimming -->
    <string-array name="config_udfpsDimmingBrightnessAlphaArray" translatable="false">
          <!-- Example:
          <item>0,255</item>
          <item>1,234</item>
          <item>3,227</item>
          <item>8,208</item>
          <item>16,192</item>
          <item>27,176</item>
          <item>41,160</item>
          <item>61,144</item>
          <item>80,128</item>
          <item>104,112</item>
          <item>130,96</item>
          <item>158,80</item>
          <item>188,64</item>
          <item>221,48</item>
          <item>250,36</item>
          <item>255,33</item>
          -->
    </string-array>

    <!-- Whether to pulse onFingerDown actions instead
         of waking the screen while the screen is off or in lpm. -->
    <bool name="config_pulseOnFingerDown">false</bool>

    <!-- The maximum number of tiles in the QuickQSPanel -->
    <integer name="quick_qs_panel_max_tiles_custom">4</integer>

    <!-- The maximum number of rows in the QuickQSPanel -->
    <integer name="quick_qs_panel_max_rows_custom">2</integer>

    <!-- The number of columns in the QuickSettings -->
    <integer name="quick_settings_num_columns_custom">2</integer>

    <!-- The number of rows in the QuickSettings -->
    <integer name="quick_settings_max_rows_custom">4</integer>

    <!-- Whether to enable lock screen quick affordances -->
    <bool name="flag_enable_customizable_lock_screen_quick_affordances">true</bool>

    <!-- Whether usage of the proximity sensor during doze is supported -->
    <bool name="doze_proximity_sensor_supported">true</bool>

    <!-- Whether to show VoLTE icon in the status bar -->
    <bool name="config_display_volte">true</bool>
</resources>
