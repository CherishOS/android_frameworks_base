<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="start"
    android:gravity="start"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/below_clock_padding_start">
    <com.android.systemui.corvus.qsweather.KGWeatherText
        android:textColor="?wallpaperTextColor"
        android:gravity="start"
        android:layout_gravity="start"
        android:id="@+id/kg_weather_temp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:singleLine="true"
        style="@style/TextAppearance.Keyguard.Secondary"
        />
    <com.android.systemui.corvus.qsweather.KGWeatherImage
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginBottom="6dp"
        android:id="@+id/weather_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        />
</LinearLayout>
